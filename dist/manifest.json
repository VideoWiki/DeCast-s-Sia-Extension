{
    "manifest_version": 3,
    "name": "Decast",
    "version": "1.0.0",
    "description": "Create and manage your Deacst calls and Casts on the go.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "https://decast.live/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": ["https://decast.live/*"],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://decast.live/*"
      ]
}